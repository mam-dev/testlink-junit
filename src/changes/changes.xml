<document xmlns="http://maven.apache.org/changes/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/changes/1.0.0 http://maven.apache.org/xsd/changes-1.0.0.xsd">
    <properties>
        <title>Changes TestLink JUnit Project</title>
        <author email="mirko.friedenhagen@1und1.de">Mirko Friedenhagen</author>
    </properties>
    <body>
        <release version="2.0.2" date="2011-10-20" description="Documentation.">
            <action dev="mifr" type="fix">
                Wrong documentation in TestLinkXmlRunListener for usage with Maven.
                <fixes issue="2"/>
            </action>
        </release>
        <release version="2.0.1" date="2011-10-20" description="Documentation and Refactoring.">
            <action dev="mifr" type="add">
                Sample Eclipse project with a main method.
            </action>
            <action dev="mifr" type="update">
                Updated documentation to be mostly in Javadoc.
            </action>
            <action dev="mifr" type="update">
                Renamed methods to make their intentions clearer.
            </action>
        </release>
        <release version="2.0" date="2011-10-18" description="Renamed RunListener.">
            <action dev="mifr" type="update">
                Renamed TestLinkRunListener to TestLinkXmlRunListener.
            </action>
        </release>
        <release version="1.3" date="2011-10-17" description="Assumptions as blocked">
            <action dev="mifr" type="add">
                Tests with failing assumptions will be reported as BLOCKED as well.
            </action>
        </release>
        <release version="1.2" date="2011-10-15" description="Threadsafety">
            <action dev="mifr" type="add">
                Make TestRunListener threadsafe.
            </action>
        </release>
        <release version="1.1" date="2011-10-13" description="First release">
            <action dev="mifr" type="update">
                First version of the TestRunListener.
            </action>
        </release>
    </body>
</document>
